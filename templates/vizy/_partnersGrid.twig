<h2 class="text-lg text-htq_blue font-bold mb-4">Our partners</h2>
<div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    {% for partner in relatedPartners.all() %}
        <a class="bg-loop_{{ loop.index }} h-36 p-6 text-white group hover:opacity-80 transition duration-500 ease-in-out" href="{{ partner.url }}">
                <div class="flex flex-row justify-between items-start">
                        <p class="text-md text-white font-bold leading-6 pr-8">{{ partner.title }}</p>
                        <img class="opacity-0 group-hover:opacity-100 transition duration-500 ease-in-out" src="{{ siteUrl }}dist/img/right-chevron.svg" alt="" role="presentation">
                </div>
        </a>
    {% endfor %}
</div>